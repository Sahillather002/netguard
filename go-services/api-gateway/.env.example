# Server Configuration
PORT=8080
GIN_MODE=release

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=3600

# Rate Limiting
RATE_LIMIT=100
RATE_WINDOW=60

# CORS
CORS_ORIGINS=*

# Database (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=netguard
# DB_PASSWORD=password
# DB_NAME=netguard

# Redis (for future use)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Rust Service
RUST_SERVICE_URL=http://localhost:8085

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
ENABLE_METRICS=true

# Features
ENABLE_WEBHOOKS=true
ENABLE_AUDIT_LOGS=true
ENABLE_RATE_LIMITING=true
